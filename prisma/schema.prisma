generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["relationJoins"]
}

// Website Database
datasource db_web {
  provider = "mysql"
  url      = env("WEBSITE_DATABASE_URL")
}

model Runs {
  id          Int      @id @default(autoincrement())
  memberId    String   @db_web.VarChar(255)
  url         String   @db_web.Text
  description String   @db_web.Text
  map         String   @db_web.VarChar(255)
  headset     String   @db_web.VarChar(255)
  grip        String   @db_web.VarChar(255)
  comment     String?  @db_web.Text
  date        DateTime @default(now())
  status      Int      @db_web.Int
}

model Users {
  id        Int    @id @default(autoincrement())
  userId    String @unique @db_web.VarChar(255)
  sessionId String @unique @db_web.VarChar(255)
}

model Tokens {
  id     Int    @id @default(autoincrement())
  userId String @unique @db_web.VarChar(255)
  token  String @db_web.Text

  @@unique([token(length: 8192)])
}
